{# mois demandé == mois de la date actuelle #}
{% set c1 = (month|date('Y-m') == "now"|date('Y-m')) %}

<span>

    <div class="d-flex justify-content-between">
        <div class="p-1">
            <a class="btn btn-outline-primary btn-sm {% if c1 %} disabled {% endif %}"
            {% if c1 %} aria-disabled="true" {% endif %}
            {% if c1 %}href="#"{% else %}href="{{ path('front_planning_room_month', {'roomSlug': room.slug, 'month': prevMonth|date('Y-m-d')})}}"{% endif %}>
                <i class="fas fa-caret-square-left"></i> {{ prevMonth|date('F') }}
            </a>
        </div>
        <div class="p-1">
            <h3 class="d-inline-block"><strong>{{ month|date('F') }}</strong></h3>
            <span class="badge
                        {% if reservations|length >= 60 %} badge-danger
                        {% elseif reservations|length >= 40 %} badge-warning
                        {% elseif reservations|length >= 20 %} badge-info
                        {% else %} badge-light {% endif %}">
                {{ reservations|length }} réservation(s)
            </span>
        </div>
        <div class="p-1">
            <a class="btn btn-outline-primary btn-sm float-right"
               href="{{ path('front_planning_room_month', {'roomSlug': room.slug, 'month': nextMonth|date('Y-m-d')})}}">
                {{ nextMonth|date('F') }} <i class="fas fa-caret-square-right"></i>
            </a>
        </div>
    </div>
    
</span>
