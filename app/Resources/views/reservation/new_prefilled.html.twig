{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - Nouvelle réservation
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha18/css/tempusdominus-bootstrap-4.min.css" />
{% endblock %}




{% block content %}

    <div class="container">
        <h2>Nouvelle réservation</h2>
        <br>
        <div class="row align-items-center">
            <div class="col">

            </div>
            <div class="col-6">

                {{ form_start(form) }}

                {{ form_errors(form) }}
                {{ form_row(form.room) }}
                {{ form_row(form.date) }}
                {{ form_row(form.timeBegin) }}
                {{ form_row(form.timeEnd) }}


                {{ form_rest(form) }}
                <div class="form-action">
                    <button type="submit" class="btn btn-primary">Créer</button>
                </div>
                {{ form_end(form) }}

            </div>
            <div class="col">

            </div>
        </div>

    </div>
    
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('public/moment.js/moment-with-locales.js') }}"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha18/js/tempusdominus-bootstrap-4.min.js"></script>
    
    
    <script type="text/javascript">
        $(function () {
            $('#appbundle_reservation_date').datetimepicker({
                locale: '{{ app.request.locale }}',
                format: 'L',
                daysOfWeekDisabled: [0, 6]
            });
        });
        $(function () {
            $('#appbundle_reservation_timeBegin').datetimepicker({
                locale: '{{ app.request.locale }}',
                stepping: 30,
                format: 'LT'
            });
        });

        $(function () {
            $('#appbundle_reservation_timeEnd').datetimepicker({
                locale: '{{ app.request.locale }}',
                stepping: 30,
                format: 'LT',
                useCurrent: false
            });
        });
    </script>
    
    
    
    <script type="text/javascript">
        $(document).ready(function () {
            var date        = $('#appbundle_reservation_date').attr('value');
            var timeBegin   = $('#appbundle_reservation_timeBegin').attr('value');
            var timeEnd     = $('#appbundle_reservation_timeEnd').attr('value');
            $('#appbundle_reservation_date').val(date);
            $('#appbundle_reservation_timeBegin').val(timeBegin);
            $('#appbundle_reservation_timeEnd').val(timeEnd);
        });
    </script>
    
    
{% endblock %}
