                {% set icon = "<td style='text-align:center;'><img src='" ~ elem.icon_url ~ "'
                                data-toggle='popover' data-placement='top' data-trigger='click'
                                data-content='" ~ elem.description ~ "'></td>" %}
                {% set temperature = "<td style='text-align:center;'><i class='fas fa-thermometer-half'></i> " ~ elem.temperature|round ~ "°C</td>" %}

                {% set toDisplayBis = toDisplayBis ~ heure %}
                {% set toDisplayTer = toDisplayTer ~ icon %}
                {% set toDisplayQua = toDisplayQua ~ temperature %}
