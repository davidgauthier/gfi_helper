{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - {{room.name}} : Réservations du {{ day|date('d/m/Y')}}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="container">
    	
        <h3>{{room.name}} : Réservations du {{ day|date('d/m/Y')}}</h3>

        <div class="table-responsive">
            <table class="table table-sm table-bordered table-hover table-light">
                {% for hour in 8..17 %}
                    
                    {% for reservation in reservations %}
                        
                        {% if reservation.timeBegin|date('H:i') == "%02d"|format(hour)~':00' %}
                            <tr>
                                <td>{{ "%02d"|format(hour) }}:00 - {{ "%02d"|format(hour) }}:30</td>
                                <td>    
                                    {{ reservation.user.username }}
                                </td>
                            </tr>
                        {% else %}
                            <tr class="table-primary">
                                <td>{{ "%02d"|format(hour) }}:00 - {{ "%02d"|format(hour) }}:30</td>
                                <td></td>
                            </tr>
                        {% endif %}
        		
                        {% if reservation.timeBegin|date('H:i') == "%02d"|format(hour)~':30' %}
                            <tr>
                                <td>{{ "%02d"|format(hour) }}:30 - {{ "%02d"|format(hour+1) }}:00</td>
                                <td>    
                                    {{ reservation.user.username }}
                                </td>
                            </tr>
                        {% else %}
                            <tr class="table-primary">
                                <td>{{ "%02d"|format(hour) }}:30 - {{ "%02d"|format(hour+1) }}:00</td>
    		    	    	<td></td>
		    	    </tr>
        		{% endif %}
                        
                    {% endfor %}

                {% endfor %}
            </table>
        </div>
    </div>
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
